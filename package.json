{
  "name": "user-service",
  "version": "1.2.1",
  "description": "A microservice for handling user account actions in the CLARK platform.",
  "main": "app.js",
  "scripts": {
    "start": "npm run gulp-tsc",
    "build": "node_modules/.bin/gulp tsc",
    "gulp-tsc": "node_modules/.bin/gulp start",
    "lint": "node_modules/.bin/tslint --project ./src/**",
    "pack": "npm run build && cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "zip": "cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "deploy": "eb deploy User-Service-Production --profile clark --label $(node -p \"require('./package.json').version\")",
    "prettify": "node_modules/.bin/prettier --write ./src/**/* --single-quote",
    "test": "node_modules/.bin/jest --verbose  --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cyber4All/user-service.git"
  },
  "author": "Sean Donnelly",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Cyber4All/user-service/issues"
  },
  "homepage": "https://github.com/Cyber4All/user-service#readme",
  "dependencies": {
    "@cyber4all/clark-entity": "^3.1.0",
    "@cyber4all/clark-schema": "^2.0.0-beta.0.3",
    "@cyber4all/clark-taxonomy": "^2.0.0",
    "@oriented/express": "^1.0.3",
    "@sendgrid/mail": "^6.2.1",
    "@types/morgan": "^1.7.35",
    "bcrypt": "^3.0.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.1.1",
    "mocha": "^5.2.0",
    "mongodb": "2.2.31",
    "morgan": "^1.9.0",
    "nyc": "^12.0.2",
    "raven": "^2.6.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/express-jwt": "0.0.40",
    "@types/jest": "^23.1.5",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/mongodb": "3.1.3",
    "@types/node": "^10.5.2",
    "@types/raven": "^2.5.1",
    "danger": "^4.0.1",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-typescript": "^4.0.0-alpha.1",
    "jest": "^23.4.0",
    "prettier": "1.14.1",
    "ts-jest": "^23.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*?(?=.spec).*?.(js)",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
